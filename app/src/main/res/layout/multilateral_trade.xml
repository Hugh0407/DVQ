<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/listtransinlinear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
    <LinearLayout
       android:layout_width="0dp"
        android:layout_weight="2"
     android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvBillCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="单据号"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="19sp" />
    </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
          android:layout_marginTop="4dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvBillDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_marginRight="10dp"
                android:text="单据日期"
                android:textColor="@color/black"
                android:textSize="16sp" />
        </LinearLayout>



    </LinearLayout>
        <LinearLayout
            android:id="@+id/listtransinlinear2"
            android:layout_below="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/tvCOutCompany1"
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:layout_height="wrap_content"
                android:text="调出组织:"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvCOutCompany"
                android:layout_width="0dp"
                android:layout_weight="3.5"
                android:layout_height="wrap_content"
                android:text="调出组织"
                android:textColor="@color/black"
                android:textSize="16sp" />

        </LinearLayout>

    <LinearLayout
        android:id="@+id/listtransinlinear3"
        android:layout_below="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
        android:id="@+id/tvCInCompany1"
        android:layout_width="0dp"
            android:layout_weight="1.5"
        android:layout_height="wrap_content"
        android:text="调入组织:"
        android:textColor="@color/black"
        android:textSize="16sp" />

        <TextView
            android:id="@+id/tvCInCompany"
            android:layout_width="0dp"
            android:layout_weight="3.5"
            android:layout_height="wrap_content"
            android:text="调入组织"
            android:textColor="@color/black"
            android:textSize="16sp" />


    </LinearLayout>


</LinearLayout>



