<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.techscan.dvq.PurStockInDetail"
    android:background="@drawable/pagebackgroup"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_margin="5dp">
            <TextView
                android:id="@+id/TextView31"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="条 　 码" />
            <EditText
                android:id="@+id/txtPurBarcode"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:background="@drawable/edittext_style"
                android:layout_marginLeft="5dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/TextView33"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="编 　 码"/>
            <EditText
                android:id="@+id/txtPurInvCode"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:background="@drawable/edittext_style"
                android:layout_margin="5dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="名 　 称"/>

            <EditText
                android:focusable="false"
                android:id="@+id/txtPurInvName"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:background="@drawable/edittext_style"
                android:layout_margin="5dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

        </LinearLayout>

        <EditText
            android:id="@+id/txtPurSpec"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/txtPurInvCode"
            android:editable="false"
            android:focusable="false"
            android:ems="10"
            android:gravity="bottom"
            android:background="@drawable/edittext_style"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_alignLeft="@+id/txtPurInvCode"
            android:layout_alignStart="@+id/txtPurInvCode" />

        <EditText
            android:id="@+id/txtPurSerino"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/txtPurBatch"
            android:editable="false"
            android:focusable="false"
            android:ems="10"
            android:gravity="bottom"
            android:background="@drawable/edittext_style"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_alignLeft="@+id/txtPurBatch"
            android:layout_alignStart="@+id/txtPurBatch" />

        <EditText
            android:id="@+id/txtPurBatch"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/txtPurInvName"
            android:editable="false"
            android:focusable="false"
            android:ems="10"
            android:gravity="bottom"
            android:background="@drawable/edittext_style"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_alignLeft="@+id/txtPurInvName"
            android:layout_alignStart="@+id/txtPurInvName" />

        <TextView
            android:id="@+id/TextView01"
            android:layout_width="wrap_content"
            android:layout_height="10px"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="  " />



        <TextView
            android:id="@+id/TextView36"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  型  　号"
            android:layout_alignBottom="@+id/txtPurInvName"
            android:layout_alignLeft="@+id/TextView33"
            android:layout_alignStart="@+id/TextView33" />

        <TextView
            android:id="@+id/TextView34"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  批  　次"
            android:layout_alignBaseline="@+id/txtPurBatch"
            android:layout_alignBottom="@+id/txtPurBatch"
            android:layout_alignLeft="@+id/TextView36"
            android:layout_alignStart="@+id/TextView36" />

        <TextView
            android:id="@+id/TextView35"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  流 水 号"
            android:layout_alignBaseline="@+id/txtPurSerino"
            android:layout_alignBottom="@+id/txtPurSerino"
            android:layout_alignLeft="@+id/TextView34"
            android:layout_alignStart="@+id/TextView34" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvPurcount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="已扫描0件"
            android:textColor="@android:color/holo_blue_light"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/MPurListButtonBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="0dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btnPurTask"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_normal_style"
            android:textColor="@color/white"
            android:text="任务" />

        <Button
            android:id="@+id/btnPurDetail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_normal_style"
            android:textColor="@color/white"
            android:text="明细" />

        <Button
            android:id="@+id/btnPurReturn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_normal_style"
            android:textColor="@color/white"
            android:text="返回" />
    </LinearLayout>
</LinearLayout>
