<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout
        android:id="@+id/listpdlinear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <TextView
            android:id="@+id/listorder"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="PDORDERNO"
            android:textColor="#000000"
            android:textSize="25sp"
            android:layout_weight="3"/>
        <TextView
            android:id="@+id/listorderdate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="PDORDERNO"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/listpdlinear2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/listpdlinear1"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/listbusiname"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/listpdorder"
            android:layout_weight="1"
            android:text="FROM"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/listpurorgname"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/listfromware"
            android:layout_weight="1"
            android:text="TO"
            android:textColor="#000000"
            android:textSize="16sp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/listpdlinear3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/listpdlinear2"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/listcorderid"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/listpdorder"
            android:layout_weight="1"
            android:text="FROM"
            android:textColor="#000000"
            android:textSize="16sp" />
    </LinearLayout>

</RelativeLayout>
