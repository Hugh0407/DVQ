<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal" 
	android:layout_width="fill_parent"
	android:layout_height="fill_parent">

    <TextView
        android:id="@+id/tvSIBill1"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:text="Bill"
        android:textColor="#000000"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/tvSIAccId"
        android:layout_width="50px"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tvSIBill1"
        android:text="A"
        android:textColor="#000000"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/tvWhName1"
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tvSIAccId"
        android:layout_alignBottom="@+id/tvSIAccId"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/tvSIAccId"
        android:text="WhName"
        android:textColor="#000000"
        android:textSize="25sp" />

</RelativeLayout>