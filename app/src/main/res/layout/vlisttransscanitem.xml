<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="5dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/txtTransScanAccId"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:text="A"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtTransScanBillCode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="BILLCODE"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/linearLayout1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/txtTransScanBarCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BarCode"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/txtTransScanInvCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="INVCODE"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtTransScanInvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="INVNAME"
            android:textSize="15sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/txtTransScanBatch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/linearLayout2"
        android:text="BATCH"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/txtTransBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txtTransScanBatch"
        android:layout_alignBottom="@+id/txtTransScanBatch"
        android:layout_alignRight="@+id/linearLayout1"
        android:text="未"
        android:textSize="15sp" />

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/txtTransScanBatch"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/txtTransScanSeriNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SeriNo"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txtTransScanCap1"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="已扫："
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txtTransScanScanCount"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="CON"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txtTransScanCap2"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="总包："
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txtTransScanTotalNum"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="TOT"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </LinearLayout>

</RelativeLayout>