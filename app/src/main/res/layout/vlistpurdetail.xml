<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/listpurdetailinvok"
        android:layout_width="100px"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/listpurdetailinvBatch"
        android:layout_alignBottom="@+id/listpurdetailinvBatch"
        android:layout_alignParentRight="true"
        android:text="分包未完"
        android:textColor="@color/red"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/listpurdetailinvCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:hint="invCode"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/listpurdetailinvName"
        android:layout_width="321dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/listpurdetailinvCode"
        android:text="invName"
        android:textColor="#000000"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/listpurdetailinvBatch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/listpurdetailinvName"
        android:text="invBatch"
        android:textColor="#000000"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/listpurdetailSno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/listpurdetailinvok"
        android:layout_alignBottom="@+id/listpurdetailinvok"
        android:layout_marginRight="26dp"
        android:layout_toLeftOf="@+id/listpurdetailinvok"
        android:text="Sno"
        android:textColor="#000000"
        android:textSize="16sp" />

</RelativeLayout>