<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.techscan.dvq.materialOut.MaterialOutAct">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvsearchInvUnitName"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="单据号"/>

            <EditText
                android:id="@+id/bill_num"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="5"
                android:background="@drawable/edittext_style"
                android:ems="10"
                android:maxLines="1"
                android:singleLine="true"
                android:textAllCaps="true"/>

            <ImageButton
                android:id="@+id/refer_bill_num"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/browse"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="单据日期"/>

            <EditText
                android:id="@+id/bill_date"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="5"
                android:background="@drawable/edittext_style"
                android:ems="10"
                android:maxLines="1"
                android:singleLine="true"
                android:textAllCaps="true"/>

            <ImageButton
                android:id="@+id/refer_bill_date"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/browse"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="仓库"/>

            <EditText
                android:id="@+id/wh"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="5"
                android:background="@drawable/edittext_style"
                android:ems="10"
                android:maxLines="1"
                android:singleLine="true"
                android:textAllCaps="true"/>

            <ImageButton
                android:id="@+id/refer_wh"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/browse"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="4dp"
                android:gravity="center_vertical"
                android:text="库存组织"/>

            <EditText
                android:id="@+id/organization"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:background="@drawable/edittext_style"
                android:ems="10"
                android:maxLines="1"
                android:singleLine="true"
                android:textAllCaps="true"/>

            <ImageButton
                android:id="@+id/refer_organization"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/browse"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="4dp"
                android:gravity="center_vertical"
                android:text="收发类别"/>

            <EditText
                android:id="@+id/lei_bie"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:background="@drawable/edittext_style"
                android:ems="10"
                android:maxLines="1"
                android:singleLine="true"
                android:textAllCaps="true"/>

            <ImageButton
                android:id="@+id/refer_lei_bie"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/browse"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="部门"/>

            <EditText
                android:id="@+id/department"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="5"
                android:background="@drawable/edittext_style"
                android:ems="10"
                android:maxLines="1"
                android:singleLine="true"
                android:textAllCaps="true"/>

            <ImageButton
                android:id="@+id/refer_department"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/browse"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:gravity="center"
                android:text="备注"/>

            <EditText
                android:id="@+id/remark"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/edittext_style"
                android:gravity="left|top"
                android:padding="8dp"
                android:scrollbars="vertical"
                android:textAllCaps="true"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/PurStockInButtonBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#d7d6d6"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnPurInScan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_normal_style"
            android:text="扫描"
            android:textColor="@color/white"/>


        <Button
            android:id="@+id/btnPurinSave"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_normal_style"
            android:text="保存"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/btnBack"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_normal_style"
            android:text="退出"
            android:textColor="@color/white"/>
    </LinearLayout>
</LinearLayout>
