<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.techscan.dvq.StockTransContentIn">
   <!--<ScrollView-->
       <!--android:layout_width="match_parent"-->
       <!--android:layout_height="">-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="6dp"
        android:layout_weight="1"
        android:orientation="vertical">
        <!--<ScrollView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content">-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.9"
                android:gravity="center"
                android:text="来源单据 "/>

            <EditText
                android:id="@+id/txtMultilateralTrade"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:layout_weight="4.1"
                android:layout_marginRight="5dp"
                android:width="200dp"
                android:background="@drawable/edittext_style"
                android:editable="false"
                android:ems="10"
                android:focusable="false"
                android:singleLine="true"
                android:text="多角贸易"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="6dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.9"
                android:gravity="center"
                android:text="单      号" />

            <EditText
                android:id="@+id/txtDocument"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:layout_weight="4.1"
                android:layout_marginRight="0.5dp"
                android:width="200dp"
                android:background="@drawable/edittext_style"
                android:ems="10"
                android:singleLine="true"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="收发类别"/>

            <EditText
                android:id="@+id/txtSendAndTake"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:layout_weight="4"
                android:width="200dp"
                android:background="@drawable/edittext_style"
                android:editable="false"
                android:ems="10"
                android:singleLine="true"/>


            <ImageButton
                android:id="@+id/imageSendAndTake"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/browse"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="库存组织"/>

            <EditText
                android:id="@+id/txtOrg"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:layout_weight="4"
                android:width="200dp"
                android:background="@drawable/edittext_style"
                android:editable="false"
                android:ems="10"
                android:singleLine="true"/>


            <ImageButton
                android:id="@+id/imageOrg"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/browse"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="出库仓库"/>

            <EditText
                android:id="@+id/txtWareHouse"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:layout_weight="4"
                android:width="200dp"
                android:background="@drawable/edittext_style"
                android:editable="false"
                android:ems="10"
                android:singleLine="true"/>


            <ImageButton
                android:id="@+id/imageWareHouse"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/browse"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvSalesDelPDOrder"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="单  据  号"/>

            <EditText
                android:id="@+id/txtDocumentNumber"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:layout_weight="4"
                android:width="200dp"
                android:background="@drawable/edittext_style"
                android:editable="false"
                android:ems="10"
                android:singleLine="true"/>

            <ImageButton
                android:id="@+id/imageDocumentNumber"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/browse"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="部       门"/>

            <EditText
                android:id="@+id/txtDepartment"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:layout_weight="4"
                android:width="200dp"
                android:background="@drawable/edittext_style"
                android:editable="false"
                android:ems="10"
                android:singleLine="true"/>

            <ImageButton
                android:id="@+id/imageDepartment"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/browse"/>
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.9"
                android:gravity="center"
                android:text="调出公司"/>

            <EditText
                android:id="@+id/txtOutCompany"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:layout_weight="4.1"
                android:layout_marginRight="5dp"
                android:width="200dp"
                android:background="@drawable/edittext_style"
                android:editable="false"
                android:ems="10"
                android:singleLine="true"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="6dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.9"
                android:gravity="center"
                android:text="调出组织"
                android:id="@+id/textView2" />

            <EditText
                android:id="@+id/txtOutOrg"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:layout_weight="4.1"
                android:layout_marginRight="0.5dp"
                android:width="200dp"
                android:background="@drawable/edittext_style"
                android:editable="false"
                android:ems="10"
                android:singleLine="true"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="6dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.9"
                android:gravity="center"
                android:text="调入公司"/>

            <EditText
                android:id="@+id/txtInCompany"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:layout_weight="4.1"
                android:layout_marginRight="0.5dp"
                android:width="200dp"
                android:background="@drawable/edittext_style"
                android:editable="false"
                android:ems="10"
                android:singleLine="true"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="6dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.9"
                android:gravity="center"
                android:text="调入组织"/>

            <EditText
                android:id="@+id/txtInOrg"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:layout_weight="4.1"
                android:layout_marginRight="0.5dp"
                android:width="200dp"
                android:background="@drawable/edittext_style"
                android:ems="10"
                android:singleLine="true"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="6dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.9"
                android:gravity="center"
                android:text="单据日期"/>


            <EditText
                android:id="@+id/txtBillDate"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:layout_weight="4.1"
                android:layout_marginRight="0.5dp"
                android:width="200dp"
                android:background="@drawable/edittext_style"
                android:editable="false"
                android:ems="10"
                android:singleLine="true"/>

        </LinearLayout>
        <!--</ScrollView>-->

    </LinearLayout>


    <LinearLayout
        android:id="@+id/TransInButtonBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#d7d6d6"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnScan"
            style="android:buttonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_normal_style"
            android:text="扫描"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/btnSave"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_normal_style"
            android:text="保存"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/btnExit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_normal_style"
            android:text="退出"
            android:textColor="@color/white"/>
    </LinearLayout>

</LinearLayout>