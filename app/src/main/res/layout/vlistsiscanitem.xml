<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="5dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/txtSIScanAccId"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:text="A"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtSIScanBillCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BILLCODE"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/txtSINScanBarCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/linearLayout1"
        android:text="BarCode"
        android:textColor="#000000"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/txtSIScanInvName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/txtSINScanBarCode"
        android:text="INVNAME"
        android:textColor="#000000"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/txtSIScanBatch"
        android:layout_width="230px"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtSIScanInvName"
        android:layout_below="@+id/txtSIScanInvName"
        android:text="BATCH"
        android:textColor="#000000"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/txtisfinish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txtSIPosName"
        android:layout_alignBottom="@+id/txtSIPosName"
        android:layout_alignRight="@+id/linearLayout1"
        android:text="分包未完"
        android:textColor="@color/red"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/txtSIPosName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtSIScanBatch"
        android:layout_below="@+id/txtSIScanBatch"
        android:text="PosName"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/txtSIScanSeriNo"
        android:layout_width="80px"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txtSIPosName"
        android:layout_alignParentRight="true"
        android:text="SeriNo"
        android:textColor="#000000"
        android:textSize="15sp" />

</RelativeLayout>