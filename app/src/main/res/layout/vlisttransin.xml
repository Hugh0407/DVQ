<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	
	<LinearLayout android:id="@+id/listtransinlinear1"
	    	android:orientation="vertical"
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content">
			
			<TextView android:id="@+id/listtransinpdorder" 
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" 
				android:text="PDORDERNO" 
				android:textColor="#000000"
				android:textSize="25sp" />
	</LinearLayout>

	<LinearLayout
	    android:id="@+id/listtransinlinear2"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_alignParentLeft="true"
	    android:layout_below="@+id/listtransinlinear1"
	    android:orientation="horizontal" >

	    <TextView
	        android:id="@+id/listtransinaccid"
	        android:layout_width="20dp"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/listtransinpdorder"
	        android:text="A"
	        android:textColor="#000000"
	        android:textSize="16sp" />

	    <TextView
	        android:id="@+id/listtransinfromware"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/listtransinpdorder"
	        android:layout_weight="1.01"
	        android:text="FROM"
	        android:textColor="#000000"
	        android:textSize="16sp" />

	    <TextView
	        android:id="@+id/listtransintoware"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/listtransinfromware"
	        android:layout_weight="1"
	        android:text="TO"
	        android:textColor="#000000"
	        android:textSize="16sp" />
	</LinearLayout>
	
	<LinearLayout android:id="@+id/listtransinlinear3"
	    	android:orientation="horizontal"
			android:layout_width="match_parent" 
			android:layout_height="wrap_content"
			android:layout_below="@+id/listtransinlinear2">
			
	    	<TextView
		        android:id="@+id/listtransinspace"
		        android:layout_width="20dp"
		        android:layout_height="wrap_content"
		        android:text=" "
		        android:textColor="#000000"
		        android:textSize="16sp" />
			<TextView android:id="@+id/listtransincorpoutname" 
				android:layout_width="0dp"
				android:layout_height="wrap_content" 
				android:layout_weight="1"
				android:text="CORPOUTNAME" 
				android:textColor="#000000"
				android:textSize="16sp" />			
			<TextView android:id="@+id/listtransincorpinname" 
				android:layout_width="0dp"
				android:layout_height="wrap_content" 
				android:layout_weight="1"
				android:text="CORPINNAME" 
				android:textColor="#000000"
				android:textSize="16sp" />
	</LinearLayout>
    

</RelativeLayout>
