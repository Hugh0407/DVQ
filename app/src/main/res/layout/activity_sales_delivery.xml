<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.techscan.dvq.StockTransContentIn">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="6dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvSales01"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="来源单据 "/>

            <EditText
                android:id="@+id/tvSaleOutSelect"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:layout_weight="4"
                android:width="200dp"
                android:background="@drawable/edittext_style"
                android:editable="false"
                android:ems="10"
                android:singleLine="true"
                android:text="销售出库"/>


            <ImageButton
                android:id="@+id/btnSaleOutSelect"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/browse"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvSalesDelPDOrder"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="单 据 号"/>

            <EditText
                android:id="@+id/txtSalesDelPDOrder"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:layout_weight="4"
                android:width="200dp"
                android:background="@drawable/edittext_style"
                android:editable="false"
                android:ems="10"
                android:singleLine="true"/>

            <ImageButton
                android:id="@+id/btnSalesDelPDOrder"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/browse"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvSalesDelWH"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="出库仓库"/>

            <EditText
                android:id="@+id/txtSalesDelWH"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:layout_weight="4"
                android:width="200dp"
                android:background="@drawable/edittext_style"
                android:editable="false"
                android:ems="10"
                android:singleLine="true"/>


            <ImageButton
                android:id="@+id/btnSalesDelWH"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/browse"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="6dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvCustomer"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.085"
                android:gravity="center"
                android:text="客  户"/>

            <EditText
                android:id="@+id/txtSalesDelCD"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:layout_weight="0.95"
                android:background="@drawable/edittext_style"
                android:ems="10"
                android:singleLine="true"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="6dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvSalesDelRdcl"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="0.01"
                android:text="单据日期"/>


            <EditText
                android:id="@+id/txtSalesDelRdcl"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:layout_weight="0.99"
                android:background="@drawable/edittext_style"
                android:ems="10"
                android:singleLine="true"/>

        </LinearLayout>

        <!--<LinearLayout-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginRight="6dp"-->
            <!--android:orientation="horizontal">-->

            <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="match_parent"-->
                <!--android:gravity="center"-->
                <!--android:layout_weight="0.01"-->
                <!--android:text="发货单号"/>-->


            <!--<EditText-->
                <!--android:id="@+id/tvSaleOrderNo"-->
                <!--android:layout_width="0dp"-->
                <!--android:layout_height="30dp"-->
                <!--android:layout_marginTop="5dp"-->
                <!--android:layout_weight="0.99"-->
                <!--android:background="@drawable/edittext_style"-->
               <!--/>-->

        <!--</LinearLayout>-->

    </LinearLayout>


    <LinearLayout
        android:id="@+id/TransInButtonBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#d7d6d6"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnSalesDelScan"
            style="android:buttonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_normal_style"
            android:text="扫描"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/btnSalesDelSave"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_normal_style"
            android:text="保存"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/btnSalesDelExit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_normal_style"
            android:text="退出"
            android:textColor="@color/white"/>
    </LinearLayout>

</LinearLayout>