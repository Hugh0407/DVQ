<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="com.techscan.dvq.VlistMultipds" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/mlistpdorder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PDORDERNO"
            android:textColor="#000000"
            android:textSize="25sp"
            android:textStyle="normal" />

    </LinearLayout>

    <CheckBox
        android:id="@+id/chbmitemselect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:visibility="visible" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout1"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/mlistaccid"
            android:layout_width="22dp"
            android:layout_height="wrap_content"
            android:text="A"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/mlistfromware"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="FROM"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/mlisttoware"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TO"
            android:textColor="#000000"
            android:textSize="16sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/mlistdcorp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/chbmitemselect"
        android:layout_alignBottom="@+id/chbmitemselect"
        android:layout_toLeftOf="@+id/chbmitemselect"
        android:text="kua"
        android:textColor="@color/red"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/bill12345"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/mlistdcorp"
        android:layout_alignBottom="@+id/mlistdcorp"
        android:layout_toLeftOf="@+id/mlistdcorp"
        android:text="  "
        android:textColor="@color/red"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/mlistbillstatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/bill12345"
        android:layout_alignBottom="@+id/bill12345"
        android:layout_toLeftOf="@+id/bill12345"
        android:text="tui"
        android:textColor="@color/red"
        android:textSize="16sp" />

</RelativeLayout>