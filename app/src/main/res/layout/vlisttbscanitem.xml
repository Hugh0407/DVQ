<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:layout_x="0dp"
        android:layout_y="0dp"
        android:orientation="horizontal" >
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayout01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:layout_x="0dp"
        android:layout_y="0dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/txtTBScanAccId"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:text="A"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtSINScanBarCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BarCode"
            android:textColor="#000000"
            android:textSize="15sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayout02"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:layout_x="-1dp"
        android:layout_y="20dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/txtTBScanInvName"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="INVNAME"
            android:textColor="#000000"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/txtTBScanPos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PosCode"
            android:textColor="#000000"
            android:textSize="15sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayout03"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:layout_x="1dp"
        android:layout_y="42dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/txtTBScanBatch"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="BATCH"
            android:textColor="#000000"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/txtTBScanBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="fenbao"
            android:textColor="@color/red"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayout04"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:layout_x="0dp"
        android:layout_y="63dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/LinearLayout05"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/txtTBScanSeriNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SeriNo"
                android:textColor="#000000"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/TextView01"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="扫描序列："
                android:textColor="#000000"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/txtTBScanCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="000000"
                android:textSize="15sp" />
        </LinearLayout>

    </LinearLayout>

</AbsoluteLayout>